 if len(stri)==1:

            return 0

        k=""

        i=0

        j=len(stri)-1

        ans=0

        while i<j:

            if stri[i]==stri[j]:

                i+=1

                j-=1

            else:

                ans=len(stri)-j

                i=0

                while (stri[i]==stri[j]):

                    ans-=1

                    i+=1

                j-=1

        return ans
